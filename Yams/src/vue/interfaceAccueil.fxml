<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:controller="controleur.ControllerAccueil"
			xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="1000" prefHeight="500"
            styleClass="page-accueil">

    <!-- Image de fond -->
    <ImageView fitWidth="1000" fitHeight="500" layoutX="0" layoutY="0">
        <image>
            <Image url="@Images/fond.png" preserveRatio="false"/>
        </image>
    </ImageView>

    <!-- Titre -->
    <Text fx:id="titre" layoutX="445" layoutY="70" text="Yam’s"/>

    <!-- Bouton JOUER -->
    <Button layoutX="360" layoutY="150" prefWidth="300" prefHeight="50" text="JOUER" onAction="#handleJouer"/>

    <!-- Bouton RÈGLE -->
    <Button layoutX="360" layoutY="250" prefWidth="300" prefHeight="50" text="RÈGLE" onAction="#handleRegle"/>

    <!-- Bouton CREDITS -->
    <Button layoutX="360" layoutY="350" prefWidth="300" prefHeight="50" text="CREDITS" onAction="#handleCredits"/>

    <!-- Dés en haut à droite -->
    <ImageView fitWidth="150" fitHeight="150" layoutX="800" layoutY="20">
        <image>
            <Image url="@Images/des.png" preserveRatio="true"/>
        </image>
    </ImageView>

    <!-- Dés en bas à gauche -->
    <ImageView fitWidth="200" fitHeight="160" layoutX="20" layoutY="320">
        <image>
            <Image url="@Images/des3.png" preserveRatio="true"/>
        </image>
    </ImageView>

</AnchorPane>
